<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/safe"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SheSafe"
        tools:targetApi="31">
        <activity
            android:name=".ManageProfile"
            android:exported="false"
            android:label="@string/title_activity_manage_profile"
            android:theme="@style/Theme.SheSafe" />
        <activity
            android:name=".EditProfileScreen"
            android:exported="false"
            android:label="@string/title_activity_edit_profile_screen"
            android:theme="@style/Theme.SheSafe" />
        <activity
            android:name=".SOSActivity"
            android:exported="false"
            android:label="@string/title_activity_sosactivity"
            android:theme="@style/Theme.SheSafe" />
        <activity
            android:name=".CreateAccountScreen"
            android:exported="false"
            android:label="@string/title_activity_create_account_screen"
            android:theme="@style/Theme.SheSafe" />
        <activity
            android:name=".LoginScreenActivity"
            android:exported="false"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.SheSafe" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SheSafe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>